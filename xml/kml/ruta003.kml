<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        <name>Ruta Gastronómica de Siero</name>
        <description>
            Un recorrido por las sidrerías, restaurantes y mercados tradicionales de Pola de Siero 
            para descubrir la auténtica gastronomía asturiana. Incluye degustaciones de productos 
            típicos y demostración de escanciado de sidra.
        </description>
        
        <!-- Estilos para puntos -->
        <Style id="inicio">
            <IconStyle>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/paddle/grn-circle.png</href>
                </Icon>
                <scale>1.2</scale>
            </IconStyle>
        </Style>
        
        <Style id="hito">
            <IconStyle>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/paddle/blu-circle.png</href>
                </Icon>
                <scale>1.0</scale>
            </IconStyle>
        </Style>
        
        <Style id="ruta">
            <LineStyle>
                <color>ff0000ff</color>
                <width>3</width>
            </LineStyle>
        </Style>
        
        <!-- Punto de inicio -->
        <Placemark>
            <name>Inicio: Mercado de Abastos - Pola de Siero</name>
            <description>Punto de inicio de la ruta</description>
            <styleUrl>#inicio</styleUrl>
            <Point>
                <coordinates>
                    -5.663763,43.388971,183
                </coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 1 -->
        <Placemark>
            <name>Hito 1: Mercado de Abastos</name>
            <description>Mercado tradicional con productos locales y artesanales</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.663763,43.388971,183</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 2 -->
        <Placemark>
            <name>Hito 2: Sidrería El Madreñeru</name>
            <description>Sidrería tradicional con demostración de escanciado</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.663128,43.390353,184</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 3 -->
        <Placemark>
            <name>Hito 3: Restaurante La Pola</name>
            <description>Establecimiento especializado en fabada y cachopos</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.661249,43.389218,186</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 4 -->
        <Placemark>
            <name>Hito 4: Confitería Cardin</name>
            <description>Elaboración artesanal de dulces asturianos</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.664892,43.387659,182</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 5 -->
        <Placemark>
            <name>Hito 5: Llagar de sidra</name>
            <description>Visita a un llagar tradicional con explicación del proceso de elaboración</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.668749,43.385367,190</coordinates>
            </Point>
        </Placemark>
        
        <!-- Línea de ruta -->
        <Placemark>
            <name>Recorrido Ruta Gastronómica de Siero</name>
            <description>Trazado completo de la ruta</description>
            <styleUrl>#ruta</styleUrl>
            <LineString>
                <tessellate>1</tessellate>
                <coordinates>
                    -5.663763,43.388971,183 -5.663763,43.388971,183 -5.663128,43.390353,184 -5.661249,43.389218,186 -5.664892,43.387659,182 -5.668749,43.385367,190
                </coordinates>
            </LineString>
        </Placemark>
        
    </Document>
</kml>