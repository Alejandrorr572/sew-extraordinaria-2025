<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        <name>Senda Verde del Río Nora</name>
        <description>
            Recorrido a lo largo del río Nora que atraviesa el concejo de Siero ofreciendo 
            un entorno natural privilegiado con bosques autóctonos, prados y ecosistemas 
            fluviales. Ideal para observación de aves y fotografía de naturaleza.
        </description>
        
        <!-- Estilos para puntos -->
        <Style id="inicio">
            <IconStyle>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/paddle/grn-circle.png</href>
                </Icon>
                <scale>1.2</scale>
            </IconStyle>
        </Style>
        
        <Style id="hito">
            <IconStyle>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/paddle/blu-circle.png</href>
                </Icon>
                <scale>1.0</scale>
            </IconStyle>
        </Style>
        
        <Style id="ruta">
            <LineStyle>
                <color>ff0000ff</color>
                <width>3</width>
            </LineStyle>
        </Style>
        
        <!-- Punto de inicio -->
        <Placemark>
            <name>Inicio: Área Recreativa de La Fresneda</name>
            <description>Punto de inicio de la ruta</description>
            <styleUrl>#inicio</styleUrl>
            <Point>
                <coordinates>
                    -5.794639,43.396077,165
                </coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 1 -->
        <Placemark>
            <name>Hito 1: Área Recreativa La Fresneda</name>
            <description>Punto de inicio con merenderos y área de descanso</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.794639,43.396077,165</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 2 -->
        <Placemark>
            <name>Hito 2: Puente Medieval de Colloto</name>
            <description>Antiguo puente de piedra que atraviesa el río Nora</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.782548,43.389913,158</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 3 -->
        <Placemark>
            <name>Hito 3: Bosque de Ribera</name>
            <description>Zona de especial interés ecológico con alisos y sauces centenarios</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.767092,43.384826,152</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 4 -->
        <Placemark>
            <name>Hito 4: Mirador del Meandro</name>
            <description>Vista panorámica del meandro del río y la vega circundante</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.747918,43.379451,175</coordinates>
            </Point>
        </Placemark>
        
        <!-- Hito 5 -->
        <Placemark>
            <name>Hito 5: Molino de Nora</name>
            <description>Molino tradicional restaurado junto al río</description>
            <styleUrl>#hito</styleUrl>
            <Point>
                <coordinates>-5.740000,43.377000,170</coordinates>
            </Point>
        </Placemark>
        
        <!-- Línea de ruta -->
        <Placemark>
            <name>Recorrido Senda Verde del Río Nora</name>
            <description>Trazado completo de la ruta</description>
            <styleUrl>#ruta</styleUrl>
            <LineString>
                <tessellate>1</tessellate>
                <coordinates>
                    -5.794639,43.396077,165 -5.794639,43.396077,165 -5.782548,43.389913,158 -5.767092,43.384826,152 -5.747918,43.379451,175 -5.740000,43.377000,170
                </coordinates>
            </LineString>
        </Placemark>
        
    </Document>
</kml>